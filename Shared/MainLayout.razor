@inherits LayoutComponentBase

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blazor Calendar</title>

    <!-- Main Style for the web app -->
    <link rel="stylesheet" href="~/css/main.css">
    
    <!-- Bootstrap -->
